@model BlogApplication.Models.Blog


@{
    ViewBag.Title = "Edit";
}

<div class="row">
    <div class="col-md-offset-2 col-md-7">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger"})
                @Html.HiddenFor(model => model.blogid)

                <div class="row">
                    <h2>Edit Blog</h2>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.title)
                            @Html.EditorFor(model => model.title, "", new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.title, "", new { @class = "text-danger" })

                        </div>

                    </div>
                    <div class="col-md-offset-1 col-md-5">
                        <div class="form-group">
                            @Html.LabelFor(model => model.datePublished)
                            @Html.EditorFor(model => model.datePublished, "", new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.datePublished, "", new { @class = "text-danger" })

                        </div>

                    </div>

                    
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.writer)
                            @Html.EditorFor(model => model.writer, "", new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.writer, "", new { @class = "text-danger" })

                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
