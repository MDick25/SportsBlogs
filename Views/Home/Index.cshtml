@{
    ViewBag.Title = "Home Page";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="text-center carousel-title">Popular Topics</h1>
            <hr />
        </div>
        <div id="carouselExample" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExample" data-slide-to="0" class="active">
                    <img class="d-block w-100" src="~/Content/Images/img1.jpg" alt="First slide" />
                </li>
                <li data-target="#carouselExample" data-slide-to="0" class="active">
                    <img class="d-block w-100" src="~/Content/Images/img2.jpg" alt="First slide" />
                </li>
                <li data-target="#carouselExample" data-slide-to="0" class="active">
                    <img class="d-block w-100" src="~/Content/Images/img3.jpg" alt="First slide" />
                </li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="~/Content/Images/img1.jpg" alt="First slide" />
                    <div class="carousel-caption">
                        <h5>NBA Bubble Playoffs</h5>
                        <p>Who will be crowned NBA champions in this unusual playoff season</p>
                    </div>
                </div>
                <div class="carousel-item active">
                    <img class="d-block w-100" src="~/Content/Images/img2.jpg" alt="First slide" />
                    <div class="carousel-caption">
                        <h5>NFL comback</h5>
                        <p>This portion is to discuss the latest on boxing</p>
                    </div>
                </div>
                <div class="carousel-item active">
                    <img class="d-block w-100" src="~/Content/Images/img3.jpg" alt="First slide" />
                    <div class="carousel-caption">
                        <h5>Boxing</h5>
                        <p>Who are your favorites to win Super Bowl next year?</p>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExample" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExample" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>